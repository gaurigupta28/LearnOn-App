<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer_layout_admin"
    tools:context=".Activities.AdminStudyWork">

    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical">
        <include layout='@layout/admin_studywork_toolbar'/>

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:layout_marginTop="20sp"
            android:layout_marginStart="5sp"
            android:layout_marginEnd="5sp"
            android:background="@drawable/roundedborder"
            android:orientation="vertical">

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:textStyle="bold"
                android:textSize="30sp"
                android:text="Time Table"
                android:textColor="@color/purple"
                android:layout_gravity="center"
                android:gravity="center"
                tools:ignore="HardcodedText" />


            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_marginTop="10sp"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_add_timetable"
                    android:textColor="@color/white"
                    android:layout_marginBottom="10sp"
                    android:layout_marginTop="10sp"
                    android:text=" Add Time Table "
                    android:padding="8dp"
                    android:layout_marginStart="5sp"
                    android:layout_marginEnd="5sp"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:background="@drawable/round_btn"
                    android:layout_height="wrap_content"
                    android:layout_width= "wrap_content"
                    tools:ignore="HardcodedText" />

                <Button
                    android:id="@+id/btn_detail_timetable"
                    android:textColor="@color/white"
                    android:text=" Time Table "
                    android:layout_marginTop="10sp"
                    android:layout_marginBottom="10sp"
                    android:layout_marginEnd="10sp"
                    android:textSize="20sp"
                    android:padding="8dp"
                    android:textStyle="bold"
                    android:layout_marginStart="10sp"
                    android:background="@drawable/round_btn"
                    android:layout_height="wrap_content"
                    android:layout_width= "wrap_content"
                    tools:ignore="ButtonStyle,HardcodedText" />

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:layout_marginTop="20sp"
            android:layout_marginStart="5sp"
            android:layout_marginEnd="5sp"
            android:background="@drawable/roundedborder"
            android:orientation="vertical">

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:textStyle="bold"
                android:textSize="30sp"
                android:text="Exam Results"
                android:textColor="@color/purple"
                android:layout_gravity="center"
                android:gravity="center"
                tools:ignore="HardcodedText" />


            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_marginTop="10sp"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_add_examresults"
                    android:textColor="@color/white"
                    android:layout_marginBottom="10sp"
                    android:layout_marginTop="10sp"
                    android:text=" Add Results "
                    android:layout_marginStart="10sp"
                    android:layout_marginEnd="10sp"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:background="@drawable/round_btn"
                    android:layout_height="wrap_content"
                    android:layout_width= "wrap_content"
                    android:padding="8dp"
                    tools:ignore="HardcodedText" />

                <Button
                    android:id="@+id/btn_detail_examresults"
                    android:textColor="@color/white"
                    android:text="  Results  "
                    android:layout_marginTop="10sp"
                    android:layout_marginBottom="10sp"
                    android:layout_marginEnd="10sp"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginStart="10sp"
                    android:background="@drawable/round_btn"
                    android:layout_height="wrap_content"
                    android:layout_width= "wrap_content"
                    android:padding="8dp"
                    tools:ignore="ButtonStyle,HardcodedText" />

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:layout_marginTop="20sp"
            android:layout_marginStart="5sp"
            android:layout_marginEnd="5sp"
            android:background="@drawable/roundedborder"
            android:orientation="vertical">

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:textStyle="bold"
                android:textSize="30sp"
                android:text="Library"
                android:textColor="@color/purple"
                android:layout_gravity="center"
                android:gravity="center"
                tools:ignore="HardcodedText" />


            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_marginTop="10sp"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_add_book"
                    android:textColor="@color/white"
                    android:layout_marginBottom="10sp"
                    android:layout_marginTop="10sp"
                    android:text="  Add Book  "
                    android:layout_marginStart="10sp"
                    android:layout_marginEnd="10sp"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:background="@drawable/round_btn"
                    android:layout_height="wrap_content"
                    android:layout_width= "wrap_content"
                    android:padding="8dp"
                    tools:ignore="HardcodedText" />

                <Button
                    android:id="@+id/btn_detail_book"
                    android:textColor="@color/white"
                    android:text="  About Books "
                    android:layout_marginTop="10sp"
                    android:layout_marginBottom="10sp"
                    android:layout_marginEnd="10sp"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginStart="10sp"
                    android:background="@drawable/round_btn"
                    android:layout_height="wrap_content"
                    android:layout_width= "wrap_content"
                    android:padding="8dp"
                    tools:ignore="ButtonStyle,HardcodedText" />

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_height="match_parent"
        android:layout_width="300dp"
        android:layout_gravity="start"
        android:background="@color/white">
        <include layout="@layout/admin_nav_drawer" />
    </RelativeLayout>


</androidx.drawerlayout.widget.DrawerLayout>